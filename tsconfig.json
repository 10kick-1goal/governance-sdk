{
  "include": ["packages/*/*/src"],
  "exclude": [
    "node_modules",
    "packages/*/*/node_modules",
    "./node_modules",
    "./node_modules/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": []
  },
  "typedocOptions": {
    "entryPoints": ".",
    "entryPointStrategy": "packages",
    "out": "docs",
    "readme": "README.md"
  }
}
